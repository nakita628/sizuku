Table users {
  id text [pk, note: 'Unique identifier for the user']
  name text [note: 'User\'s display name']
  username text [note: 'User\'s unique username']
  bio text [note: 'User\'s biography or profile description']
  email text [note: 'User\'s unique email address']
  emailVerified integer [note: 'Timestamp of email verification']
  image text [note: 'URL of user\'s image']
  coverImage text [note: 'URL of user\'s cover image']
  profileImage text [note: 'URL of user\'s profile image']
  hashedPassword text [note: 'Hashed password for security']
  createdAt integer [note: 'Timestamp when the user was created']
  updatedAt integer [note: 'Timestamp when the user was last updated']
  hasNotification integer [note: 'Flag indicating if user has unread notifications']
}

Table posts {
  id text [pk, note: 'Unique identifier for the post']
  body text [note: 'Body content of the post']
  createdAt integer [note: 'Timestamp when the post was created']
  updatedAt integer [note: 'Timestamp when the post was last updated']
  userId text [note: 'Foreign key referencing users.id']
}

Table follows {
  followerId text [note: 'Foreign key referencing users.id']
  followingId text [note: 'Foreign key referencing users.id']
  createdAt integer [note: 'Timestamp when the follow relationship was created']
}

Table likes {
  userId text [note: 'Foreign key referencing users.id']
  postId text [note: 'Foreign key referencing posts.id']
  createdAt integer [note: 'Timestamp when the like relationship was created']
}

Table comments {
  id text [pk, note: 'Unique identifier for the comment']
  body text [note: 'Body content of the comment']
  createdAt integer [note: 'Timestamp when the comment was created']
  updatedAt integer [note: 'Timestamp when the comment was last updated']
  userId text [note: 'Foreign key referencing users.id']
  postId text [note: 'Foreign key referencing posts.id']
}

Table notifications {
  id text [pk, note: 'Unique identifier for the notification']
  body text [note: 'Body content of the notification']
  userId text [note: 'Foreign key referencing users.id']
  createdAt integer [note: 'Timestamp when the notification was created']
}

Ref posts_userId_users_id_fk: posts.userId > users.id

Ref follows_followerId_users_id_fk: follows.followerId > users.id

Ref follows_followingId_users_id_fk: follows.followingId > users.id

Ref likes_userId_users_id_fk: likes.userId > users.id

Ref likes_postId_posts_id_fk: likes.postId > posts.id

Ref comments_userId_users_id_fk: comments.userId > users.id

Ref comments_postId_posts_id_fk: comments.postId > posts.id

Ref notifications_userId_users_id_fk: notifications.userId > users.id