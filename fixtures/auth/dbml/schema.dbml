Table User {
  id text [pk, note: 'Unique user ID']
  name text [note: 'Display name']
  email text [note: 'Email address']
  emailVerified text [note: 'Date when the email was verified']
  image text [note: 'Profile image URL']
  password text [note: 'Hashed password']
  role text [note: 'Role of the user (ADMIN or USER)']
  isTwoFactorEnabled integer [note: 'Whether 2FA is enabled']
}

Table Account {
  id text [pk, note: 'Unique account ID']
  userId text [note: 'Reference to the user ID']
  type text [note: 'Type of account (e.g., oauth, email)']
  provider text [note: 'Name of the provider (e.g., google, github)']
  providerAccountId text [note: 'Provider-specific account ID']
  refresh_token text [note: 'Refresh token']
  access_token text [note: 'Access token']
  expires_at integer [note: 'Expiration time (UNIX timestamp)']
  token_type text [note: 'Token type (e.g., Bearer)']
  scope text [note: 'OAuth scope']
  id_token text [note: 'ID token']
  session_state text [note: 'Session state']
}

Table VerificationToken {
  id text [pk, note: 'Token ID']
  email text [note: 'Email address']
  token text [note: 'Token string']
  expires text [note: 'Expiry time']
}

Table PasswordResetToken {
  id text [pk, note: 'Token ID']
  email text [note: 'Email address']
  token text [note: 'Token string']
  expires text [note: 'Expiry time']
}

Table TwoFactorToken {
  id text [pk, note: 'Token ID']
  email text [note: 'Email address']
  token text [note: 'Token string']
  expires text [note: 'Expiry time']
}

Table TwoFactorConfirmation {
  id text [pk, note: 'Confirmation ID']
  userId text [note: 'Reference to user']
}

Ref Account_userId_User_id_fk: Account.userId > User.id

Ref TwoFactorConfirmation_userId_User_id_fk: TwoFactorConfirmation.userId > User.id