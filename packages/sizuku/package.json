{
  "name": "sizuku",
  "type": "module",
  "version": "0.5.0",
  "description": "Sizuku is a tool that generates validation schemas for Zod and Valibot, as well as ER diagrams and DBML, from Drizzle schemas annotated with comments.",
  "license": "MIT",
  "keywords": [
    "drizzle",
    "zod",
    "valibot",
    "mermaid",
    "dbml"
  ],
  "homepage": "https://github.com/nakita628/sizuku",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nakita628/sizuku.git"
  },
  "bugs": {
    "url": "https://github.com/nakita628/sizuku/issues"
  },
  "main": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "files": [
    "dist"
  ],
  "bin": {
    "sizuku": "dist/index.mjs"
  },
  "exports": {
    "./config": {
      "types": "./dist/config/index.d.mts",
      "import": "./dist/config/index.mjs"
    }
  },
  "scripts": {
    "deps": "rm -rf node_modules && pnpm install",
    "build": "tsdown",
    "typecheck": "tsc --noEmit",
    "dev": "pnpm --filter sizuku-test dev",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "release": "npm pkg fix && pnpm build && npm publish"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.14",
    "drizzle-orm": "^0.44.7",
    "tsdown": "^0.20.1",
    "typescript": "^5.9.3",
    "valibot": "1.2.0",
    "vitest": "^4.0.14"
  },
  "peerDependencies": {
    "drizzle-orm": ">=0.36.0"
  },
  "peerDependenciesMeta": {
    "drizzle-orm": {
      "optional": true
    }
  },
  "dependencies": {
    "@resvg/resvg-js": "^2.6.2",
    "@softwaretechnik/dbml-renderer": "^1.0.31",
    "prettier": "^3.6.2",
    "ts-morph": "^27.0.2",
    "tsx": "^4.20.6",
    "zod": "^4.1.13"
  }
}
